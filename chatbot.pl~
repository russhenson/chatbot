:- include('kb.pl').
%idk if that include works haha

yes_ans(yes).
no_ans(no).


start :-
    write('Hello! I am Dr.Bot, your medical chatbot assistant.'),
    nl,
    write('What is your name? '),
    read(Name), nl,
    format('Hi, ~w!~n', [Name]),
    write('Is this an emergency? (yes or no)'),
    read(Answer), nl, no_ans(No),
    Answer=@=No,nl,not_emergency;
    emergency.


not_emergency :-
    write('Please refer to a large medical facility.').

emergency :-
    write('What is your symptom today?'),
    nl,
    read(Symptom),
    symptom(Disease, Symptom),
    write('You have '), write(Disease).


